// Prisma Schema - Quadro de Obras
// Database: PostgreSQL

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ==================== MODELS ====================

model User {
  id             String       @id @default(cuid())
  email          String       @unique
  name           String
  password       String       // Hash bcrypt
  role           Role         @default(MEMBER)
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@index([email])
  @@index([organizationId])
  @@map("users")
}

model Organization {
  id        String    @id @default(cuid())
  name      String
  slug      String    @unique  // URL-friendly identifier
  users     User[]
  projects  Project[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([slug])
  @@map("organizations")
}

model Project {
  id               String       @id @default(cuid())
  name             String
  detailsChecklist Json?        // Array de {text, checked}
  detailsText      String?
  isCurrent        Boolean      @default(false)
  organizationId   String
  organization     Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  tasks            Task[]
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt

  @@index([organizationId])
  @@index([isCurrent])
  @@map("projects")
}

model Task {
  id         String   @id @default(cuid())
  title      String
  status     String   // Criado, Em separação, Pendencia, Em romaneio, Entregue
  created    String?  // Data formatada BR
  dates      Json?    // {status: timestamp}
  history    Json?    // Array de mudanças
  hasPending Boolean  @default(false)
  parentId   String?  // Para pendências
  expanded   Boolean  @default(false)
  projectId  String
  project    Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([projectId])
  @@index([status])
  @@index([parentId])
  @@map("tasks")
}

// ==================== ENUMS ====================

enum Role {
  ADMIN   // Pode tudo na organização
  MEMBER  // Pode editar obras e tarefas
  VIEWER  // Apenas visualizar
}
